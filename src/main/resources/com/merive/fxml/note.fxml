<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="770.0" prefWidth="585.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.merive.NoteController">
    <Pane fx:id="pane" layoutY="50.0" prefHeight="720.0" prefWidth="585.0"
          style="-fx-background-color: #1a2a33; -fx-border-color: #bbe1fa; -fx-border-width: 4px;">
        <TextArea fx:id="text" layoutX="10.0" layoutY="72.0" prefHeight="634.0" prefWidth="565.0" styleClass="text-area"
                  stylesheets="@../css/note.css" wrapText="true">
            <font>
                <Font name="Roboto Light" size="16.0"/>
            </font>
        </TextArea>
        <Pane layoutX="-1.0" prefHeight="65.0" prefWidth="586.0"
              style="-fx-background-color: #1a2a33; -fx-border-color: #bbe1fa; -fx-border-width: 4px;">
            <Button fx:id="open" alignment="CENTER" contentDisplay="CENTER" layoutX="14.0" layoutY="10.0"
                    mnemonicParsing="false" onAction="#open" prefHeight="45.0" prefWidth="150.0"
                    style="-fx-background-color: #1a2a33; -fx-border-color: #bbe1fa; -fx-border-width: 4px;"
                    stylesheets="@../css/launcher.css" text="Open File" textFill="#bbe1fa">
                <font>
                    <Font name="Roboto Light" size="18.0"/>
                </font>
            </Button>
            <Button fx:id="save" alignment="CENTER" contentDisplay="CENTER" layoutX="218.0" layoutY="10.0"
                    mnemonicParsing="false" onAction="#save" prefHeight="45.0" prefWidth="150.0"
                    style="-fx-background-color: #1a2a33; -fx-border-color: #bbe1fa; -fx-border-width: 4px;"
                    stylesheets="@../css/launcher.css" text="Save File" textFill="#bbe1fa">
                <font>
                    <Font name="Roboto Light" size="18.0"/>
                </font>
            </Button>
            <Button fx:id="close" alignment="CENTER" contentDisplay="CENTER" layoutX="422.0" layoutY="10.0"
                    mnemonicParsing="false" onAction="#close" prefHeight="45.0" prefWidth="150.0"
                    style="-fx-background-color: #1a2a33; -fx-border-color: #bbe1fa; -fx-border-width: 4px;"
                    stylesheets="@../css/launcher.css" text="Close File" textFill="#bbe1fa">
                <font>
                    <Font name="Roboto Light" size="18.0"/>
                </font>
            </Button>
        </Pane>
    </Pane>

    <Pane fx:id="titlebar" onMouseDragged="#move" onMousePressed="#press" prefHeight="55.0" prefWidth="585.0"
          style="-fx-background-color: #1B262C; -fx-border-color: #bbe1fa; -fx-border-width: 4px;">
        <Button alignment="CENTER" contentDisplay="CENTER" layoutX="535.0" layoutY="9.0"
                mnemonicParsing="false" onAction="#exit" prefHeight="37.0" prefWidth="37.0"
                style="-fx-background-color: #1a2a33; -fx-border-color: #bbe1fa; -fx-border-width: 4px;"
                stylesheets="@../css/launcher.css" text="X" textFill="#bbe1fa">
            <font>
                <Font name="Roboto Light" size="12.0"/>
            </font>
        </Button>
        <Button alignment="CENTER" contentDisplay="CENTER" layoutX="485.0" layoutY="9.0"
                mnemonicParsing="false" onAction="#minimize" prefHeight="37.0" prefWidth="37.0"
                style="-fx-background-color: #1a2a33; -fx-border-color: #bbe1fa; -fx-border-width: 4px;"
                stylesheets="@../css/launcher.css" text="_" textFill="#bbe1fa">
            <font>
                <Font name="Roboto Light" size="12.0"/>
            </font>
        </Button>
        <ImageView fitHeight="33.0" fitWidth="33.0" layoutX="276.0" layoutY="11.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@../icons/note_icon.png"/>
        </ImageView>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="14.0" layoutY="-3.0" prefHeight="62.0"
               prefWidth="150.0" text="MTools Note" textFill="#bbe1fa">
            <font>
                <Font name="Roboto Light" size="20.0"/>
            </font>
        </Label>
    </Pane>
</AnchorPane>
